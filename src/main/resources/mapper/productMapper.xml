<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.congge.mapper.ProductMapper">

    <sql id="base_column">
        `id`, `username`, `password`, `email`, `age`, `phone`, `create_date`, `update_date`, `create_by`,
        `update_by`, `del_flag`, `remarks`
    </sql>

    <select id="selectProductById" resultType="com.congge.entity.Product">
        select * from t_product where `id` = #{productId} for update;
    </select>


</mapper>
